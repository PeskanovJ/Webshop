<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Send reset password email.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label>Email:</label>
                    <input type="email" id="email" name="email" class="form-control" aria-required="true" />
                </div>
                <br>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Send Email</button>
                </div>
                <br>
            </form>
        </section>
    </div>

</div>