@using Projekat.Shared.DTOs
@model IEnumerable<ItemDTO>
@{
    ViewData["Title"] = "All products";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-border table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Item Name</th>

                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="border">

            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Title</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Item" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this item?');" asp-controller="Item" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-x-circle"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
