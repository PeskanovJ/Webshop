@using Projekat.Shared.DTOs
@model IEnumerable<CategoryDTO>
@{
    ViewData["Title"] = "Categories";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>
<br />
<br />

<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="border">

        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Category</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this item?');" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId"><i class="bi bi-x-circle"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

