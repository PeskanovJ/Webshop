
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home</title>
    <!-- CSS only -->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/jquery.bxslider.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/responsive.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-green">
            <div class="container-fluid bg-light">
                <img src="~/img/s-logo.svg" width="150" height="50" style="padding:5px;background-color:white" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Item" asp-action="Index">Shop page</a></li>
                        <li class="nav-item"><a class="nav-link" href="single-product.html">Single product</a></li>
                        <li class="nav-item"><a class="nav-link" href="cart.html">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" href="checkout.html">Checkout</a></li>
                        <li class="nav-item d-flex justify-content-end">
                            @if ((Context.Session != null && Context.Session.GetString("Email") != null))
                            {
                                <a class="nav-link" id="logout" asp-controller="Account" asp-action="Logout">Logout</a>
                                <a class="nav-link w-25" id="manage" asp-controller="Account" asp-action="Profil" asp-route-email="@Context.Session.GetString("Email")" title="Manage">Hello <b>@Context.Session.GetString("FullName")</b></a>
                                <img src="@Context.Request.Cookies["LoginCookieAvatar"]" class="p-1 rounded" style="width:5%" />
                            }
                            else if ((Context.Request.Cookies["LoginCookieEmail"] != null))
                            {
                                <a class="nav-link" id="logout" asp-controller="Account" asp-action="Logout">Logout</a>
                                <a class="nav-link w-25" id="manage" asp-controller="Account" asp-action="Profil" asp-route-email="@Context.Request.Cookies["LoginCookieEmail"]" title="Manage">Hello <b>@Context.Request.Cookies["LoginCookieFullName"]</b></a>
                                <img src="@Context.Request.Cookies["LoginCookieAvatar"]" class="p-1 rounded" style="width:5%" />
                            }
                            else
                            {

                                <a class="nav-link" id="register" asp-controller="Account" asp-action="Register">Register</a>

                                <a class="nav-link" id="login" asp-controller="Account" asp-action="Login">Login</a>

                            }
                        </li>
                        </ul>
                </div>
            </div>
        </nav><!-- End mainmenu area -->
    </header><!-- End header area -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="footer-about-us">
                        <h2><span>Prodavnica eVozila</span></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis sunt id doloribus vero quam laborum quas alias dolores blanditiis iusto consequatur, modi aliquid eveniet eligendi iure eaque ipsam iste, pariatur omnis sint! Suscipit, debitis, quisquam. Laborum commodi veritatis magni at?</p>
                        <div class="footer-social">
                            <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Navigacija </h2>
                        <ul>
                            <li><a href="#">Moj nalog</a></li>
                            <li><a href="#">Istorija porudzbina</a></li>
                            <li><a href="#">Moji oglasi</a></li>
                            <li><a href="#">Lista želja</a></li>
                            <li><a href="#">Naslovna</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title">Kategorije</h2>
                        <ul>
                            <li><a href="#">Električni trotineti</a></li>
                            <li><a href="#">Električni bicikli</a></li>
                            <li><a href="#">Oprema za električne trotinete</a></li>
                            <li><a href="#">Delovi za električne trotinete</a></li>
                            <li><a href="#">Gume za električni trotinet</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2022 Sotex. All Rights Reserved. <a href="https://www.sotexsolutions.com/" target="_blank">sotexsolutions.com</a></p>
                    </div>
                </div>

                @*<div class="col-md-4">
                        <div class="footer-card-icon">
                            <i class="fa fa-cc-discover"></i>
                            <i class="fa fa-cc-mastercard"></i>
                            <i class="fa fa-cc-paypal"></i>
                            <i class="fa fa-cc-visa"></i>
                        </div>
                    </div>*@
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="~/js/jquery.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/js/jquery.easing.1.3.js"></script>

    <!-- Main Script -->
    <script src="~/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="~/js/jquery.bxslider.js"></script>
    <script type="text/javascript" src="~/js/script.slider.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>